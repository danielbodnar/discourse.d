# Basic Configuration
DISCOURSE_HOSTNAME=discourse.example.com
DISCOURSE_DEVELOPER_EMAILS=dev@example.com
DISCOURSE_SMTP_ADDRESS=smtp.example.com
DISCOURSE_SMTP_PORT=587
DISCOURSE_SMTP_USER_NAME=smtp_user
DISCOURSE_SMTP_PASSWORD=smtp_password
DISCOURSE_DB_HOST=postgres
DISCOURSE_DB_PORT=5432
DISCOURSE_DB_NAME=discourse
DISCOURSE_DB_USERNAME=discourse
DISCOURSE_DB_PASSWORD=discourse_password
DISCOURSE_REDIS_HOST=redis
DISCOURSE_REDIS_PORT=6379

# AWS S3 Configuration
S3_ENABLED=true
S3_BACKUP_BUCKET=your-backup-bucket
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1
S3_UPLOAD_BUCKET=your-upload-bucket

# Performance Tuning
UNICORN_WORKERS=4
DISCOURSE_ENABLE_CORS=true
DISCOURSE_CORS_ORIGIN=*

# Security
DISCOURSE_FORCE_HTTPS=true
DISCOURSE_USE_SECURE_COOKIES=true
DISCOURSE_ENABLE_CSRF_PROTECTION=true

# Email Settings
DISCOURSE_SMTP_AUTHENTICATION=login
DISCOURSE_SMTP_ENABLE_START_TLS=true
DISCOURSE_SMTP_DOMAIN=example.com
DISCOURSE_NOTIFICATION_EMAIL=noreply@example.com

# CDN Configuration
DISCOURSE_CDN_URL=
DISCOURSE_CDN_ENABLED=false

# Plugins
DISCOURSE_PLUGINS=discourse-voting|discourse-math

# Backups
DISCOURSE_BACKUP_FREQUENCY=3600
DISCOURSE_BACKUP_LOCATION=s3

# OAuth Providers
DISCOURSE_GITHUB_CLIENT_ID=
DISCOURSE_GITHUB_CLIENT_SECRET=
DISCOURSE_GOOGLE_OAUTH2_CLIENT_ID=
DISCOURSE_GOOGLE_OAUTH2_CLIENT_SECRET=

# Monitoring
DISCOURSE_PROMETHEUS_COLLECTOR_PORT=9405
DISCOURSE_ENABLE_HEALTH_CHECK=true

# Rate Limiting
DISCOURSE_MAX_REQS_PER_IP_PER_MINUTE=20
DISCOURSE_MAX_USER_API_REQS_PER_MINUTE=30

# Cache Settings
DISCOURSE_ENABLE_PAGE_CACHING=true
DISCOURSE_PAGE_CACHE_ANON_TTL=60

# Search
DISCOURSE_ENABLE_ELASTICSEARCH=false
DISCOURSE_ELASTICSEARCH_URL=http://elasticsearch:9200

# Upload Settings
DISCOURSE_MAX_IMAGE_SIZE_KB=4096
DISCOURSE_MAX_ATTACHMENT_SIZE_KB=4096

# Development
DISCOURSE_DEVELOPER_MODE=false
DISCOURSE_LOAD_MINI_PROFILER=false
